---
import Button from '../ui/Button.astro';
import { cn } from '../../lib/utils';
import { siteConfig } from '../../config/siteConfig';

interface NavLink {
  href: string;
  label: string;
}

const navLinks: NavLink[] = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About' },
  { href: '/services', label: 'Services' },
  { href: '/contact', label: 'Contact' },
];

const currentPath = Astro.url.pathname;

function isActive(href: string): boolean {
  if (href === '/') {
    return currentPath === '/';
  }
  return currentPath.startsWith(href);
}
---

<header
  id="site-header"
  class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-sm transition-shadow duration-300"
>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo -->
      <a
        href="/"
        class="flex items-center gap-2 hover:opacity-90 transition-opacity"
      >
        <span class="font-heading text-lg md:text-xl font-semibold text-primary-800">
          {siteConfig.coach.name}
        </span>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center gap-1 lg:gap-2" aria-label="Main navigation">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class={cn(
              'px-3 lg:px-4 py-2 rounded-lg font-body text-sm lg:text-base font-medium transition-colors',
              isActive(link.href)
                ? 'text-primary-700 bg-primary-50'
                : 'text-gray-700 hover:text-primary-600 hover:bg-gray-50'
            )}
            aria-current={isActive(link.href) ? 'page' : undefined}
          >
            {link.label}
          </a>
        ))}
        <Button href="/contact" variant="primary" size="sm" class="ml-2 lg:ml-4">
          Get in Touch
        </Button>
      </nav>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        type="button"
        class="md:hidden relative inline-flex items-center justify-center p-2 rounded-lg text-gray-700 hover:text-primary-600 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-primary-500"
        aria-controls="mobile-menu"
        aria-expanded="false"
        aria-label="Open main menu"
      >
        <!-- Hamburger Icon -->
        <svg
          id="hamburger-icon"
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <!-- Close Icon (hidden by default) -->
        <svg
          id="close-icon"
          class="w-6 h-6 hidden"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </div>

</header>

<!-- Mobile Menu Panel (slide-in from right) — starts below fixed header -->
<div
  id="mobile-menu"
  class="md:hidden fixed top-16 bottom-0 right-0 w-4/5 max-w-sm bg-white shadow-xl transform translate-x-full transition-transform duration-300 ease-in-out z-[60] invisible"
  aria-hidden="true"
>
  <div class="flex flex-col h-full">
    <!-- Mobile Navigation Links -->
    <nav class="flex-1 px-4 py-6 overflow-y-auto" aria-label="Mobile navigation">
      <ul class="space-y-1">
        {navLinks.map((link) => (
          <li>
            <a
              href={link.href}
              class={cn(
                'block px-4 py-3 rounded-lg font-body text-lg font-medium transition-colors',
                isActive(link.href)
                  ? 'text-primary-700 bg-primary-50'
                  : 'text-gray-700 hover:text-primary-600 hover:bg-gray-50'
              )}
              aria-current={isActive(link.href) ? 'page' : undefined}
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>

    <!-- Mobile Menu Footer with CTA -->
    <div class="p-4 border-t border-gray-100">
      <Button href="/contact" variant="primary" size="md" class="w-full justify-center">
        Get in Touch
      </Button>
    </div>
  </div>
</div>

<!-- Backdrop overlay for mobile menu — starts below header -->
<div
  id="mobile-menu-backdrop"
  class="md:hidden fixed top-16 inset-x-0 bottom-0 bg-black/50 opacity-0 pointer-events-none transition-opacity duration-300 z-[55]"
  aria-hidden="true"
></div>

<!-- Spacer to prevent content from going under fixed header -->
<div class="h-16 md:h-20"></div>

<script>
  // Mobile menu functionality
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const mobileMenuBackdrop = document.getElementById('mobile-menu-backdrop');
  const hamburgerIcon = document.getElementById('hamburger-icon');
  const closeIcon = document.getElementById('close-icon');
  const header = document.getElementById('site-header');

  let isMenuOpen = false;

  function openMenu() {
    isMenuOpen = true;
    mobileMenu?.classList.remove('translate-x-full', 'invisible');
    mobileMenu?.classList.add('translate-x-0', 'visible');
    mobileMenu?.setAttribute('aria-hidden', 'false');
    mobileMenuBackdrop?.classList.remove('opacity-0', 'pointer-events-none');
    mobileMenuBackdrop?.classList.add('opacity-100', 'pointer-events-auto');
    hamburgerIcon?.classList.add('hidden');
    closeIcon?.classList.remove('hidden');
    mobileMenuBtn?.setAttribute('aria-expanded', 'true');
    mobileMenuBtn?.setAttribute('aria-label', 'Close main menu');
    document.body.style.overflow = 'hidden';
  }

  function closeMenu() {
    isMenuOpen = false;
    mobileMenu?.classList.remove('translate-x-0', 'visible');
    mobileMenu?.classList.add('translate-x-full', 'invisible');
    mobileMenu?.setAttribute('aria-hidden', 'true');
    mobileMenuBackdrop?.classList.remove('opacity-100', 'pointer-events-auto');
    mobileMenuBackdrop?.classList.add('opacity-0', 'pointer-events-none');
    hamburgerIcon?.classList.remove('hidden');
    closeIcon?.classList.add('hidden');
    mobileMenuBtn?.setAttribute('aria-expanded', 'false');
    mobileMenuBtn?.setAttribute('aria-label', 'Open main menu');
    document.body.style.overflow = '';
  }

  mobileMenuBtn?.addEventListener('click', () => {
    if (isMenuOpen) {
      closeMenu();
    } else {
      openMenu();
    }
  });

  mobileMenuBackdrop?.addEventListener('click', closeMenu);

  // Close menu on escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && isMenuOpen) {
      closeMenu();
    }
  });

  // Close menu when clicking on a nav link
  const mobileNavLinks = mobileMenu?.querySelectorAll('nav a');
  mobileNavLinks?.forEach((link) => {
    link.addEventListener('click', closeMenu);
  });

  // Sticky header shadow on scroll
  let lastScrollY = 0;

  function handleScroll() {
    const scrollY = window.scrollY;

    if (scrollY > 10) {
      header?.classList.add('shadow-md');
    } else {
      header?.classList.remove('shadow-md');
    }

    lastScrollY = scrollY;
  }

  window.addEventListener('scroll', handleScroll, { passive: true });
  handleScroll(); // Check initial state
</script>
