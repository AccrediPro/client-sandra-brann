---
import { siteConfig } from '../../config/siteConfig';
const steps = siteConfig.processSteps;
---

<section class="py-14 md:py-24 bg-white relative overflow-hidden" style="border-top: 1px solid rgba(201,169,110,0.2);">
  <!-- Decorative background image (right side) -->
  <div class="absolute inset-y-0 right-0 w-1/3 hidden xl:block pointer-events-none" aria-hidden="true">
    <img
      src="/images/generated/hero-variant-3.jpg"
      alt=""
      width="1024" height="1024"
      decoding="async"
      loading="lazy"
      class="h-full w-full object-cover opacity-10"
    />
    <div class="absolute inset-0" style="background: linear-gradient(to right, #ffffff 0%, transparent 40%);"></div>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <!-- Section Header -->
    <div class="text-center max-w-2xl mx-auto mb-16" data-aos="fade-up">
      <span class="inline-block font-body font-medium text-sm uppercase tracking-wider mb-3" style="color: #98D8AA;">
        My Approach
      </span>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-heading font-bold leading-tight" style="color: #1B3A5C; letter-spacing: -0.02em; line-height: 1.1;">
        The Root-Cause Healing Method
      </h2>
      <p class="mt-4 text-lg font-body" style="color: #6b6b6b;">
        A proven 4-step framework that addresses the root cause of your thyroid and hormonal symptoms — not just surface-level fixes.
      </p>
    </div>

    <!-- Steps — horizontal pills with descriptions below -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 md:gap-4" data-aos="fade-up" data-aos-delay="100">
      {steps.map((step) => (
        <div class="flex flex-col items-center text-center group">
          <!-- Step pill -->
          <div
            class="inline-flex items-center gap-2 bg-white border-2 rounded-full px-4 py-2.5 font-heading font-semibold text-sm text-primary-900 shadow-sm mb-3 w-full justify-center"
            style="border-color: #98D8AA;"
          >
            <span class="font-bold text-xs flex-shrink-0" style="color: #C9A96E;">{step.number}</span>
            <span class="leading-tight">{step.title}</span>
          </div>
          <!-- Description -->
          <p class="text-sm font-body leading-snug px-1" style="color: #6b6b6b;">
            {step.description}
          </p>
        </div>
      ))}
    </div>

    <!-- Link to full method details -->
    <div class="mt-10 text-center" data-aos="fade-up" data-aos-delay="200">
      <a
        href="/about#method"
        class="inline-flex items-center gap-2 text-primary-600 hover:text-primary-700 font-body font-medium transition-colors"
      >
        Learn More About My Method
        <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
        </svg>
      </a>
    </div>
  </div>
</section>
