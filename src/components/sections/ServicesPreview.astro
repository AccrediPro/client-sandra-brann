---
import Button from '../ui/Button.astro';
import { siteConfig } from '../../config/siteConfig';

const services = siteConfig.servicesPreview;
---

<section class="py-14 md:py-24" style="background-color: #faf6ef; border-top: 1px solid rgba(201,169,110,0.2);">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center max-w-2xl mx-auto mb-10 md:mb-14" data-aos="fade-up">
      <span class="inline-block font-body font-medium text-sm uppercase tracking-wider mb-3" style="color: #8b9e7c;">
        Health & Wellness Coaching Programs
      </span>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-heading font-bold leading-tight" style="color: #3b4535; letter-spacing: -0.02em; line-height: 1.1;">
        Programs to <em class="not-italic text-primary-600">Restore</em> Your Health
      </h2>
      <p class="mt-4 text-lg font-body" style="color: #6b6b6b;">
        Personalized health coaching via video call, wherever you are.
      </p>
    </div>

    <!-- Visual accent — coaching imagery beside cards -->
    <div class="mb-8 md:mb-10 rounded-2xl overflow-hidden shadow-lg relative" data-aos="fade-up" data-aos-delay="50">
      <!-- Photo: generated AI wellness imagery -->
      <img
        src="/images/generated/hero-variant-2.jpg"
        alt="Wellness coaching session — personalized health and wellness coaching"
        width="1024" height="1024"
        decoding="async"
        class="w-full object-cover object-center"
        style="display: block; max-height: 400px;"
        loading="lazy"
      />
      <div class="absolute inset-0 flex items-center" style="background: linear-gradient(to right, rgba(59,69,53,0.78) 0%, transparent 70%);">
        <div class="w-full px-6 md:px-12 max-w-lg">
          <p class="text-xl md:text-3xl font-heading font-bold leading-tight" style="color: #faf7f0;">
            Video Call Coaching
          </p>
          <p class="mt-1 md:mt-2 text-sm md:text-base font-body" style="color: #afc09e;">
            Work with your coach from anywhere
          </p>
        </div>
      </div>
    </div>

    <!-- Services Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 lg:gap-8 items-start">
      {services.map((service, index) => (
        <div
          class={`relative flex flex-col rounded-2xl bg-white border shadow-sm transition-all duration-300 ${
            service.popular
              ? 'border-2 md:scale-105 shadow-xl ring-2 md:-mt-2 hover:-translate-y-1 transition-all duration-300'
              : 'border-gray-100 hover:-translate-y-1 hover:shadow-xl transition-all duration-300'
          }`}
          style={service.popular ? 'border-color: #C9A96E; ring-color: #C9A96E;' : ''}
          data-aos="fade-up"
          data-aos-delay={index * 100}
        >
          {service.popular && (
            <div
              class="absolute -top-4 left-1/2 -translate-x-1/2 text-white text-xs font-body font-bold uppercase tracking-wider px-5 py-1.5 rounded-full shadow-md whitespace-nowrap"
              style="background-color: #C9A96E;"
            >
              ⭐ Most Popular
            </div>
          )}

          <div class="p-7 md:p-8 flex flex-col h-full">
            <!-- Icon -->
            <div class="text-primary-500 mb-4" set:html={service.icon} />

            <!-- Price -->
            <div class="mb-4">
              <span
                class={`inline-block text-2xl font-heading font-bold ${service.price === 'FREE' ? 'text-primary-600' : ''}`}
                style={service.popular ? 'color: #C9A96E;' : ''}
              >
                {service.price}
              </span>
              <span class="ml-2 text-xs font-body" style="color: #6b6b6b;">{service.priceNote}</span>
            </div>

            <!-- Title -->
            <h3 class="text-xl font-heading font-semibold mb-3" style="color: #3b4535;">
              {service.title}
            </h3>

            <!-- Description -->
            <p class="font-body leading-relaxed mb-6 flex-grow text-sm md:text-base" style="color: #6b6b6b;">
              {service.description}
            </p>

            <!-- CTA -->
            <a
              href={service.href}
              class={`inline-flex items-center gap-1 font-body font-semibold text-sm transition-colors ${
                service.popular
                  ? 'text-accent-800 hover:text-accent-900'
                  : 'text-primary-600 hover:text-primary-700'
              }`}
            >
              {service.price === 'FREE' ? 'Book Your Free Discovery Call' : 'Get Started'}
              <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>

    <!-- Pricing note + View all CTA -->
    <div class="mt-12 text-center" data-aos="fade-up" data-aos-delay="300">
      <div class="inline-flex items-center gap-3 bg-white rounded-full px-6 py-3 shadow-sm mb-8">
        <svg class="w-5 h-5 text-primary-500 flex-shrink-0" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
        </svg>
        <p class="font-body text-sm" style="color: #3a3a3a;">
          <span class="font-semibold">Start for free.</span> Your discovery call is complimentary — no commitment required.
        </p>
      </div>
      <div>
        <Button href="/contact" variant="primary" size="lg">
          Book Your Free Discovery Call
        </Button>
      </div>
    </div>
  </div>
</section>
