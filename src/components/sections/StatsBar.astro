---
import { siteConfig } from '../../config/siteConfig';
const stats = siteConfig.statsBar;
const credentialBadges = siteConfig.credentialBadges;
---

<section class="bg-white py-8 md:py-10" style="border-top: 1px solid rgba(201,169,110,0.3); border-bottom: 1px solid rgba(201,169,110,0.3);">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-3 gap-4 md:gap-4">
      {stats.map((stat, i) => (
        <div
          class={`flex flex-col sm:flex-row items-center sm:items-start gap-2 sm:gap-4 justify-center text-center sm:text-left ${i < stats.length - 1 ? 'md:border-r md:border-gray-100 md:pr-8' : ''}`}
          data-aos="fade-up"
          data-aos-delay={i * 100}
        >
          <div class="text-[#C9A96E] flex-shrink-0 hidden sm:block" set:html={stat.icon} />
          <div>
            <p class="text-2xl sm:text-3xl md:text-4xl font-heading font-bold leading-none" style="color: #C9A96E;">
              {stat.number}
            </p>
            <p class="text-xs sm:text-sm text-gray-600 font-body mt-0.5 sm:mt-1">{stat.label}</p>
          </div>
        </div>
      ))}
    </div>

    <!-- Credential badges -->
    <div class="mt-6 pt-6 border-t border-gray-100 flex flex-wrap items-center justify-center gap-3 sm:gap-6 opacity-70" data-aos="fade-up" data-aos-delay="300">
      {credentialBadges.map((badge) => (
        <div class="flex items-center gap-1.5 text-xs sm:text-sm text-gray-600">
          <span class="font-semibold text-gray-800">{badge.abbr}</span> {badge.full}
        </div>
      ))}
    </div>
  </div>
</section>
