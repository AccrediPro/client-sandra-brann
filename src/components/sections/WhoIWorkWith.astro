---
import Button from '../ui/Button.astro';
import { siteConfig } from '../../config/siteConfig';

const traits = siteConfig.whoIWorkWithTraits;
---

<!-- "Who I Work With" section — botanical bg image at low opacity -->
<section class="relative py-14 md:py-24 overflow-hidden" style="border-top: 1px solid rgba(201,169,110,0.15);">
  <!-- Background image -->
  <div class="absolute inset-0">
    <img
      src="/images/generated/section-bg-wellness.jpg"
      alt=""
      width="1024" height="1024"
      decoding="async"
      class="w-full h-full object-cover"
      loading="lazy"
      aria-hidden="true"
    />
    <div class="absolute inset-0 bg-primary-900/80"></div>
  </div>

  <div class="relative z-10 container mx-auto px-4">
    <div class="max-w-3xl mx-auto text-center" data-aos="fade-up">
      <span class="inline-block font-body font-medium text-sm uppercase tracking-wider mb-3" style="color: #98D8AA;">
        Is This You?
      </span>
      <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-heading font-bold text-white leading-tight" style="letter-spacing: -0.02em; line-height: 1.1;">
        Who I Work With
      </h2>
      <p class="mt-4 text-lg text-primary-100 font-body">
        My clients are motivated, capable people who are ready for real change — not a quick fix.
      </p>
    </div>

    <!-- Traits list -->
    <div class="mt-12 max-w-2xl mx-auto grid grid-cols-1 gap-4">
      {traits.map((trait, i) => (
        <div
          class="flex items-start gap-4 bg-white/10 backdrop-blur-sm border border-white/20 rounded-xl px-6 py-4"
          data-aos="fade-up"
          data-aos-delay={i * 60}
        >
          <svg class="w-5 h-5 text-primary-300 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          <p class="text-white font-body text-sm md:text-base">{trait}</p>
        </div>
      ))}
    </div>

    <!-- CTA -->
    <div class="mt-12 text-center" data-aos="fade-up" data-aos-delay="400">
      <p class="text-primary-200 font-body text-lg mb-6 font-heading italic">
        Does this sound like you?
      </p>
      <a
        href="/contact"
        class="inline-flex items-center justify-center px-8 py-4 bg-primary-400 hover:bg-primary-300 text-accent-900 font-body font-semibold rounded-xl text-base transition-colors shadow-lg"
      >
        Book Your Free Session
      </a>
    </div>
  </div>
</section>
