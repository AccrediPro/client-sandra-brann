---
import { cn } from '../../lib/utils';

interface Props {
  class?: string;
  /** Whether to remove default padding (useful when image is full-bleed) */
  noPadding?: boolean;
  /** Hover effect - lifts card on hover */
  hoverable?: boolean;
}

const { class: className, noPadding = false, hoverable = false } = Astro.props;

const hasImage = Astro.slots.has('image');
---

<div
  class={cn(
    'bg-white rounded-xl shadow-md overflow-hidden',
    hoverable && 'transition-transform duration-300 hover:-translate-y-1 hover:shadow-lg',
    className
  )}
>
  {hasImage && (
    <div class="card-image">
      <slot name="image" />
    </div>
  )}
  <div class={cn(!noPadding && 'p-6')}>
    <slot />
  </div>
</div>
