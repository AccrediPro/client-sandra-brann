---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Card from '../components/ui/Card.astro';
import ContactForm from '../components/forms/ContactForm.astro';
import { siteConfig } from '../config/siteConfig';

const coachName = siteConfig.coach.name;
const coachEmail = siteConfig.coach.email;
const socialLinks = siteConfig.social;

---

<BaseLayout
  title={`Contact ${coachName} | Get in Touch`}
  description={`Contact ${siteConfig.coach.name} to book your free Energy Leadership Strategy Session. Start your journey to work-life balance and sustainable success.`}
  page="contact"
>
  <Header slot="header" />

  <!-- Hero Section -->
  <section class="relative py-14 md:py-24 bg-gradient-to-br from-primary-50 via-white to-secondary-50 overflow-hidden">
    <!-- Decorative elements -->
    <div class="absolute top-0 left-0 w-72 h-72 bg-primary-100 rounded-full opacity-40 blur-3xl -translate-x-1/2 -translate-y-1/2"></div>
    <div class="absolute bottom-0 right-0 w-96 h-96 bg-accent-100 rounded-full opacity-30 blur-3xl translate-x-1/3 translate-y-1/3"></div>

    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center" data-aos="fade-up">
        <span class="inline-block text-primary-600 font-medium text-sm uppercase tracking-wider mb-3">
          Get in Touch
        </span>
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-heading font-bold leading-tight" style="color: #1B3A5C; letter-spacing: -0.02em; line-height: 1.1;">
          Let's Start Your Transformation Together
        </h1>
        <p class="mt-6 text-lg md:text-xl font-body" style="color: #3a3a3a; line-height: 1.7;">
          Ready to take the first step toward work-life balance and sustainable success?
          Whether you have questions about my coaching programs or want to book your
          free Energy Leadership Strategy Session — I'd love to connect.
        </p>
        <p class="mt-4 text-primary-600 font-medium font-body">
          Your first session is completely free — no obligation, no pressure.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Form Section (includes social links) -->
  <section id="contact-form" class="py-10 md:py-16 bg-secondary-50" data-aos="fade-up">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto">
        <div class="text-center mb-10">
          <span class="inline-block text-primary-600 font-medium text-sm uppercase tracking-wider mb-3">
            Send a Message
          </span>
          <h2 class="text-3xl md:text-4xl font-heading font-bold" style="color: #1B3A5C; letter-spacing: -0.02em;">
            Get in Touch
          </h2>
          <p class="mt-4 text-lg font-body" style="color: #6b6b6b;">
            Fill out the form below to book your free strategy session or ask any questions. I'll respond personally within 24-48 hours.
          </p>
          <!-- Social links inline -->
          <div class="flex items-center justify-center gap-3 mt-6">
            {socialLinks.map((social) => (
              <a
                href={social.url}
                target="_blank"
                rel="noopener noreferrer"
                class="w-10 h-10 bg-white rounded-full flex items-center justify-center text-primary-600 hover:bg-primary-600 hover:text-white transition-colors shadow-sm"
                aria-label={`Follow on ${social.name}`}
              >
                <Fragment set:html={social.iconSvg} />
              </a>
            ))}
          </div>
        </div>

        <Card class="p-8 md:p-10">
          <ContactForm
            id="contact-form"
            fallbackEmail={coachEmail}
            successMessage="Thank you for reaching out! I'll get back to you within 24-48 hours."
          />
        </Card>

        <!-- Direct Email Option -->
        <div class="mt-6 text-center">
          <p class="font-body" style="color: #6b6b6b;">
            Prefer email? Reach me directly at{' '}
            <a
              href={`mailto:${coachEmail}?subject=Inquiry%20About%20Coaching%20Services`}
              class="text-primary-600 hover:text-primary-700 font-medium hover:underline"
            >
              {coachEmail}
            </a>
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Reference -->
  <section class="py-8 bg-white" data-aos="fade-up">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <p class="font-body" style="color: #6b6b6b;">Have more questions? Check our <a href="/#faq" class="text-primary-600 hover:text-primary-700 font-medium hover:underline">FAQ section</a>.</p>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>

