---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Button from '../components/ui/Button.astro';
import Card from '../components/ui/Card.astro';
import CTA from '../components/sections/CTA.astro';
import { siteConfig } from '../config/siteConfig';

const services = siteConfig.servicesDetail;

---

<BaseLayout
  title={`Services | ${siteConfig.coach.name} - ${siteConfig.coach.title}`}
  description={`${siteConfig.coach.name}'s Sustainable Success Method: one-on-one coaching, group sessions, and a free Energy Leadership Strategy Session.`}
  page="services"
>
  <Header slot="header" />

  <!-- Hero Section -->
  <section class="relative py-14 md:py-24 bg-gradient-to-br from-secondary-50 via-white to-primary-50 overflow-hidden">
    <!-- Decorative elements -->
    <div class="absolute top-0 right-0 w-96 h-96 bg-primary-100 rounded-full opacity-30 blur-3xl translate-x-1/2 -translate-y-1/2"></div>
    <div class="absolute bottom-0 left-0 w-64 h-64 bg-accent-100 rounded-full opacity-30 blur-3xl -translate-x-1/2 translate-y-1/2"></div>

    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center" data-aos="fade-up">
        <span class="inline-block text-primary-600 font-medium text-sm uppercase tracking-wider mb-3">
          The Sustainable Success Method
        </span>
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-heading font-bold leading-tight" style="color: #1B3A5C; letter-spacing: -0.02em; line-height: 1.1;">
          Programs to <span class="text-primary-600">Transform Your Life</span>
        </h1>
        <p class="mt-6 text-lg md:text-xl font-body" style="color: #3a3a3a; line-height: 1.7;">
          Whether you're seeking work-life balance, renewed confidence, or a purpose-driven career, my coaching programs are designed to meet you where you are. Available in person, via Zoom, or by phone.
        </p>

        <!-- Delivery Methods -->
        <div class="mt-8 flex flex-wrap justify-center gap-4">
          <span class="inline-flex items-center gap-2 bg-white rounded-full px-4 py-2 text-sm font-medium text-primary-700 shadow-sm border border-primary-100">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" /><path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 0 1 15 0Z" /></svg>
            In Person
          </span>
          <span class="inline-flex items-center gap-2 bg-white rounded-full px-4 py-2 text-sm font-medium text-primary-700 shadow-sm border border-primary-100">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="m15.75 10.5 4.72-4.72a.75.75 0 0 1 1.28.53v11.38a.75.75 0 0 1-1.28.53l-4.72-4.72M4.5 18.75h9a2.25 2.25 0 0 0 2.25-2.25v-9a2.25 2.25 0 0 0-2.25-2.25h-9A2.25 2.25 0 0 0 2.25 7.5v9a2.25 2.25 0 0 0 2.25 2.25Z" /></svg>
            Via Zoom
          </span>
          <span class="inline-flex items-center gap-2 bg-white rounded-full px-4 py-2 text-sm font-medium text-primary-700 shadow-sm border border-primary-100">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z" /></svg>
            By Phone
          </span>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Visual Banner -->
  <div class="relative overflow-hidden">
    <!-- Photo by Vitaly Gariev on Unsplash -->
    <img
      src="/images/unsplash/wellness-1.jpg"
      alt="Wellness coaching in action — instructor guiding a client through transformation"
      width="1080"
      height="608"
      class="w-full"
      style="display: block; height: auto;"
      loading="lazy"
    />
    <div class="absolute inset-0" style="background: linear-gradient(to bottom, transparent 50%, rgba(255,255,255,1) 100%);"></div>
  </div>

  <!-- Services Detail Section -->
  <section class="pt-6 pb-14 md:pb-24 bg-white">
    <div class="container mx-auto px-4">
      {services.map((service, index) => (
        <div
          id={service.id}
          class={`py-12 ${index !== 0 ? 'border-t border-gray-100' : ''}`}
          data-aos="fade-up"
        >
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-start max-w-6xl mx-auto">
            <!-- Content Side -->
            <div class={index % 2 === 1 ? 'lg:order-2' : ''}>
              <div class="text-primary-500 mb-4">
                <Fragment set:html={service.icon} />
              </div>
              <div class="flex items-center gap-3 mb-2">
                <h2 class="text-2xl md:text-3xl font-heading font-bold" style="color: #1B3A5C;">
                  {service.title}
                </h2>
                <span class={`inline-block rounded-full px-3 py-1 text-sm font-bold ${service.price === 'FREE' ? 'bg-accent-100 text-accent-800' : 'bg-primary-100 text-primary-800'}`}>
                  {service.price}
                </span>
              </div>
              <p class="font-medium mb-1" style="color: #1B3A5C;">
                {service.subtitle}
              </p>
              <p class="text-sm text-gray-600 font-body mb-4">
                {service.duration}
              </p>
              <p class="text-lg font-body mb-6" style="color: #3a3a3a; line-height: 1.7;">
                {service.description}
              </p>

              <div class="bg-accent-50 rounded-lg p-4 mb-6">
                <p class="text-sm font-medium text-accent-700">
                  <span class="font-semibold">Ideal for:</span> {service.idealFor}
                </p>
              </div>

              <Button href="/contact" variant="primary">
                {service.price === 'FREE' ? 'Book Your Free Session' : `Get Started`}
              </Button>
            </div>

            <!-- Features Side -->
            <div class={index % 2 === 1 ? 'lg:order-1' : ''}>
              <Card class="h-full">
                <h3 class="text-lg font-heading font-semibold text-primary-900 mb-4">
                  What's Included
                </h3>
                <ul class="space-y-3">
                  {service.features.map((feature) => (
                    <li class="flex items-start gap-3">
                      <svg class="w-5 h-5 text-primary-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                      <span class="font-body" style="color: #3a3a3a;">{feature}</span>
                    </li>
                  ))}
                </ul>
              </Card>
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Pricing Comparison Section -->
  <section class="py-14 md:py-24 bg-secondary-50" data-aos="fade-up">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center mb-12">
        <span class="inline-block text-primary-600 font-medium text-sm uppercase tracking-wider mb-3">
          Investment in Your Success
        </span>
        <h2 class="text-3xl md:text-4xl font-heading font-bold text-primary-900">
          Transparent Pricing
        </h2>
        <p class="mt-4 text-lg text-gray-700 font-body">
          Choose the option that fits your needs. Every journey begins with a free strategy session.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-5 md:gap-8 max-w-5xl mx-auto">
        <!-- Free Session -->
        <Card class="text-center relative">
          <div class="mb-4">
            <span class="inline-block bg-accent-100 text-accent-800 text-xs font-bold uppercase tracking-wider rounded-full px-3 py-1">
              Start Here
            </span>
          </div>
          <h3 class="text-xl font-heading font-semibold text-primary-900 mb-2">
            Strategy Session
          </h3>
          <div class="text-4xl font-heading font-bold text-primary-600 mb-1">
            FREE
          </div>
          <p class="text-sm text-gray-600 mb-6">30–60 minutes</p>
          <ul class="text-left space-y-2 mb-6">
            <li class="flex items-center gap-2 text-gray-700 font-body text-sm">
              <svg class="w-4 h-4 text-primary-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Clarity and awareness
            </li>
            <li class="flex items-center gap-2 text-gray-700 font-body text-sm">
              <svg class="w-4 h-4 text-primary-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Next-level strategy
            </li>
            <li class="flex items-center gap-2 text-gray-700 font-body text-sm">
              <svg class="w-4 h-4 text-primary-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              No obligation
            </li>
          </ul>
          <Button href="/contact" variant="secondary" class="w-full">
            Book Your Free Session
          </Button>
        </Card>

        <!-- One-on-One -->
        <Card class="text-center relative ring-2 ring-primary-500 shadow-lg">
          <div class="mb-4">
            <span class="inline-block bg-primary-600 text-white text-xs font-bold uppercase tracking-wider rounded-full px-3 py-1">
              Most Popular
            </span>
          </div>
          <h3 class="text-xl font-heading font-semibold text-primary-900 mb-2">
            One-on-One Coaching
          </h3>
          <div class="text-4xl font-heading font-bold text-primary-600 mb-1">
            $1,500
          </div>
          <p class="text-sm text-gray-600 mb-6">12 sessions + energy assessment</p>
          <ul class="text-left space-y-2 mb-6">
            <li class="flex items-center gap-2 text-gray-700 font-body text-sm">
              <svg class="w-4 h-4 text-primary-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              12 one-hour sessions
            </li>
            <li class="flex items-center gap-2 text-gray-700 font-body text-sm">
              <svg class="w-4 h-4 text-primary-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Proprietary energy assessment
            </li>
            <li class="flex items-center gap-2 text-gray-700 font-body text-sm">
              <svg class="w-4 h-4 text-primary-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Email &amp; text support
            </li>
            <li class="flex items-center gap-2 text-gray-700 font-body text-sm">
              <svg class="w-4 h-4 text-primary-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              In person, Zoom, or phone
            </li>
            <li class="flex items-center gap-2 text-gray-700 font-body text-sm">
              <svg class="w-4 h-4 text-primary-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Payment plans available
            </li>
          </ul>
          <Button href="/contact" variant="primary" class="w-full">
            Get Started
          </Button>
        </Card>

        <!-- Group Sessions -->
        <Card class="text-center relative">
          <div class="mb-4">
            <span class="inline-block bg-primary-100 text-primary-800 text-xs font-bold uppercase tracking-wider rounded-full px-3 py-1">
              Teams
            </span>
          </div>
          <h3 class="text-xl font-heading font-semibold text-primary-900 mb-2">
            Group Sessions
          </h3>
          <div class="text-4xl font-heading font-bold text-primary-600 mb-1">
            $350
          </div>
          <p class="text-sm text-gray-600 mb-6">Per person, ~3 hours</p>
          <ul class="text-left space-y-2 mb-6">
            <li class="flex items-center gap-2 text-gray-700 font-body text-sm">
              <svg class="w-4 h-4 text-primary-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Team-focused content
            </li>
            <li class="flex items-center gap-2 text-gray-700 font-body text-sm">
              <svg class="w-4 h-4 text-primary-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Interactive exercises
            </li>
            <li class="flex items-center gap-2 text-gray-700 font-body text-sm">
              <svg class="w-4 h-4 text-primary-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Follow-up resources
            </li>
          </ul>
          <Button href="/contact" variant="secondary" class="w-full">
            Inquire About Group Sessions
          </Button>
        </Card>
      </div>
    </div>
  </section>

  <!-- Comparison Table Section -->
  <section class="py-16 md:py-20 bg-white" data-aos="fade-up">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto">
        <div class="text-center mb-10">
          <span class="inline-block text-primary-600 font-medium text-sm uppercase tracking-wider mb-3">
            Side by Side
          </span>
          <h2 class="text-2xl md:text-3xl font-heading font-bold" style="color: #1B3A5C;">
            Compare Your Options
          </h2>
        </div>
        <div class="overflow-x-auto">
          <table class="w-full text-left border-collapse font-body">
            <thead>
              <tr class="border-b-2 border-primary-200">
                <th class="py-3 px-4 text-sm font-heading font-semibold text-gray-700">Feature</th>
                <th class="py-3 px-4 text-sm font-heading font-semibold text-gray-700">Free Discovery</th>
                <th class="py-3 px-4 text-sm font-heading font-semibold text-white rounded-t-lg" style="background-color: #1B3A5C;">1-on-1 Coaching</th>
                <th class="py-3 px-4 text-sm font-heading font-semibold text-gray-700">Group Program</th>
              </tr>
            </thead>
            <tbody>
              <tr class="border-b border-gray-100">
                <td class="py-3 px-4 font-medium text-sm text-gray-700">Sessions</td>
                <td class="py-3 px-4 text-sm text-gray-600">1</td>
                <td class="py-3 px-4 text-sm text-gray-700" style="background-color: rgba(27,58,92,0.08);">12</td>
                <td class="py-3 px-4 text-sm text-gray-600">1 (~3 hrs)</td>
              </tr>
              <tr class="border-b border-gray-100">
                <td class="py-3 px-4 font-medium text-sm text-gray-700">Price</td>
                <td class="py-3 px-4 text-sm text-gray-600">Free</td>
                <td class="py-3 px-4 text-sm font-semibold" style="background-color: rgba(27,58,92,0.08); color: #1B3A5C;">$1,500</td>
                <td class="py-3 px-4 text-sm text-gray-600">$350/person</td>
              </tr>
              <tr class="border-b border-gray-100">
                <td class="py-3 px-4 font-medium text-sm text-gray-700">Format</td>
                <td class="py-3 px-4 text-sm text-gray-600">Virtual</td>
                <td class="py-3 px-4 text-sm text-gray-600" style="background-color: rgba(27,58,92,0.08);">In Person · Zoom · Phone</td>
                <td class="py-3 px-4 text-sm text-gray-600">Virtual Group</td>
              </tr>
              <tr class="border-b border-gray-100">
                <td class="py-3 px-4 font-medium text-sm text-gray-700">ELI Assessment</td>
                <td class="py-3 px-4 text-sm text-gray-400">—</td>
                <td class="py-3 px-4 text-sm text-primary-600 font-medium" style="background-color: rgba(27,58,92,0.08);">✓ Included</td>
                <td class="py-3 px-4 text-sm text-gray-400">—</td>
              </tr>
              <tr class="border-b border-gray-100">
                <td class="py-3 px-4 font-medium text-sm text-gray-700">Email & Text Support</td>
                <td class="py-3 px-4 text-sm text-gray-400">—</td>
                <td class="py-3 px-4 text-sm text-primary-600 font-medium" style="background-color: rgba(27,58,92,0.08);">✓ Included</td>
                <td class="py-3 px-4 text-sm text-gray-400">—</td>
              </tr>
              <tr>
                <td class="py-3 px-4 font-medium text-sm text-gray-700">Best For</td>
                <td class="py-3 px-4 text-sm text-gray-600">Getting started</td>
                <td class="py-3 px-4 text-sm text-gray-600" style="background-color: rgba(27,58,92,0.08);">Deep transformation</td>
                <td class="py-3 px-4 text-sm text-gray-600">Teams & organizations</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>

  <!-- Method Reference Section -->
  <section class="py-12 md:py-16 bg-secondary-50" data-aos="fade-up">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <p class="text-lg text-gray-700 font-body">
          Using my proven <strong>4-step Root-Cause Healing Method</strong> — Discover Your Root Cause · Build Your Protocol · Implement and Adjust · Sustain Your Health — I guide you to lasting thyroid and hormonal wellness.
          <a href="/about#method" class="ml-2 text-primary-600 hover:text-primary-700 font-medium hover:underline">Learn More About My Method →</a>
        </p>
      </div>
    </div>
  </section>

  <!-- FAQ Preview -->
  <section class="py-14 md:py-24 bg-white" data-aos="fade-up">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <span class="inline-block text-primary-600 font-medium text-sm uppercase tracking-wider mb-3">
          Questions?
        </span>
        <h2 class="text-3xl md:text-4xl font-heading font-bold text-primary-900 mb-6">
          Have Questions About My Programs?
        </h2>
        <p class="text-lg text-gray-700 font-body mb-8">
          Check out my frequently asked questions or reach out directly. Your first strategy session is always free — no obligation, no pressure.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href="/#faq" variant="secondary" size="lg">
            View FAQ
          </Button>
          <Button href="/contact" variant="primary" size="lg">
            Book Your Free Session
          </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <CTA />

  <Footer slot="footer" />
</BaseLayout>
